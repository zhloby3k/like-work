<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_time"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="08:00"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title" />

    </FrameLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/list_item_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIGHLANDER - Е 287 ТА 159"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:id="@+id/list_item_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цыбина Елена Владимировна"
            style="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/list_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ТО - 20 000 км"
            style="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/list_item_status"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015" />

    </FrameLayout>

</LinearLayout>