<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_time"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="08:00"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Subhead" />

    </FrameLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/list_item_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIGHLANDER - Е 287 ТА 159"
            style="@style/TextAppearance.AppCompat.Body2"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/list_item_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цыбина Елена Владимировна"
            style="@style/TextAppearance.AppCompat.Body1"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/list_item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ТО - 20 000 км"
            style="@style/TextAppearance.AppCompat.Caption"
            android:ellipsize="end"
            android:singleLine="true" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

</LinearLayout>